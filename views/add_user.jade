extends login_layout
//- script(type='text/javascript' src='../public/javascripts/datepicker.js')
<script type="text/javascript" src="../datepicker/js/boostrap-datepicker.js"></script>

block mainContent
  div.loginbox
    h1
      div.login-topbtm #{title}
    form(method="POST", action="/users/add_user")
      table.loginbox
        //- space
        tr(style='height:30px')

        tr: td
          each error in errors
              p.error #{error}

          //- username + password
          tr: td: input(type="text", name="username", placeholder="company name")
          tr: td: input(type="password", name="password", placeholder="password")
          tr: td: input(type="password", name="password2", placeholder="confirm password")

          //- space
          tr(style='height:30px')

      //- submit
      div.login-topbtm
        table
          tr
            td(style='width:200px')
              p.white Have an account?
                br
                a(href="../login") Login here.
            td
              input(type="submit", value="Submit").submit

