extends layouts/company_layout

block content

  //- Edit modals
  include sections/edit_company_header
  include sections/edit_company_about
  include sections/edit_company_info

  .company-header

    //- Edit
    .company-header-edit.edit-btn(data-toggle="modal" data-target="#edit-header") 
      i.fa.fa-pencil.fa-right
      | edit

    .company-header-info

      //- Company logo
      if (p && p.img_path)
        img.company-logo(src=p.img_path)
      else
        div.company-logo Add logo

      //- Company name
      .company-name
        if (title)
          | #{title}
        else
          | Add name

      //- Company description
      .company-description
        if (p && p.short_descrip)
          | #{p.short_descrip}
        else
          | Add description

  .company-content
    .content-block
      .block-title About

      .block-edit.edit-btn(data-toggle="modal" data-target="#edit-about")
        i.fa.fa-pencil.fa-right
        | edit

      .block-content
        if (p && p.description)
          | #{p.description}
        else
          div Add description

    .content-block
      .block-title Info

      .block-edit.edit-btn(data-toggle="modal" data-target="#edit-info")
        i.fa.fa-pencil.fa-right
        | edit

      .block-content

        if (p && p.categories)
          ul
            each c,i in p.categories
              if (i !=0)
                | , 
              li #{c.name}
        else
          div Add categories

        if (p && p.founders)
          div
            each f,i in p.founders
              if(i != 0)
                | ,
              | #{f.name}
        else
          div Add founders

        if (p && p.founded_on)
          div #{p.founded_on}
        else
          div Add date

        if (p && p.total_funding)
          div $#{p.total_funding.toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,')}
        else
          div Add funding info

        if (p && p.homepage_url) 
            div: a(href="http://" + "#{p.homepage_url}") #{p.homepage_url}
        else
            div Add homepage url 

    .content-block
      .block-title Milestones

      .block-edit.edit-btn.edit-disabled(data-toggle="modal" data-target="")
        i.fa.fa-pencil.fa-right
        | edit

      .block-content
        | N/A

    .content-block
      .block-title Team

      .block-edit.edit-btn.edit-disabled(data-toggle="modal" data-target="#")
        i.fa.fa-pencil.fa-right
        | edit

      .block-content
        | N/A





