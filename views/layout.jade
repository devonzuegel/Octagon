doctype html
<meta charset=”utf-8”> 
html
  head
    title #{title}
    link(rel='shortcut icon', href='http://formation8.com/wp-content/uploads/favicon.ico')

    //- STYLESHEETS -//////////////////////////////////////////////////////////
    //- bootstrap
    style(type="text/css"): include ../public/bootstrap/css/bootstrap-theme.css
    style(type="text/css"): include ../public/bootstrap/css/bootstrap.css

    //- datepicker (w/ jquery-ui)
    style(type="text/css"): include ../public/stylesheets/sass/vendors/jquery-ui.css
    style(type="text/css"): include ../public/stylesheets/sass/vendors/datepicker.css
    
    //- //- tablesort CSS
    //- style(type="text/css"): include ../public/stylesheets/tablesort.css

    //- general css
    style(type="text/css"): include ../public/stylesheets/sass/base/style.css
    style(type="text/css"): include ../public/stylesheets/sass/components/mixitup.css

    //- general css
    style(type="text/css", media="screen"): include ../public/stylesheets/css/screen.css
    style(type="text/css", media="print"): include ../public/stylesheets/css/print.css

    block h

    //- JAVASCRIPTS -//////////////////////////////////////////////////////////
    script(type="text/javascript"): include ../public/javascripts/jquery.min.js
    script(type="text/javascript"): include ../public/javascripts/jquery-ui.js
    script(type="text/javascript"): include ../public/bootstrap/js/bootstrap.min.js


    script.
      $(document).ready(function() {
          $(".tooltip_a a").tooltip({
              placement : 'bottom',
              html: true,
              effect: 'slide',
              content: 'loading...',
              open: function (event, ui) {
                  $(ui.tooltip).appendTo(this);
              }
          });
      });

    // [if IE 9]>       
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  

  .toolbar: .container: .row
    
    .col-xs-6: h5.pull-left
      a(href='/dashboard/'): .pull-left
        span.glyphicon.glyphicon-home

      if is_admin
        a(href='/users/'): .pull-left(style="margin-left:15px")
          //- Portfolio
          span.glyphicon.glyphicon-th 

    .col-xs-6.pull-right.text-right.tooltip_a
      h5.pull-right
        | Hello, #{username}!
        a(href='../login'): .pull-right(style="margin-left:15px")
          //- | Log out
          span.glyphicon.glyphicon-log-out
        a(href='../login'): .pull-right(style="margin-left:15px")
          //- | Alerts
          span.glyphicon.glyphicon-bell

  .container

    .row
      .col-xs-10: h1.notitle #{title}
      .col-xs-2: block topRight

    if errors != '' && errors != undefined
      .col-lg-12
        p.error #{errors}
    block mainContent
    div(style='height:50px')