include ../mixins/edit_modal_mixin


+edit_modal("/portfolio/"+permalink+"/editMetrics", "edit-economics-ltv", "Add")
  input(type="hidden" name="form_name" value="economics")

  div.small-label LTV
  input(
    type="text"
    placeholder="Add LTV"
    name="ltv"
    autocomplete="off")
  .inline-input-container
    div.small-label Quarter
    input(
      type="text"
      placeholder="1-4"
      name="quarter"
      autocomplete="off")
  .inline-input-container
    div.small-label Year
    input(
      type="text"
      name="year"
      autocomplete="off")



