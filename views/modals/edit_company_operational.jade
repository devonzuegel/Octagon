include ../mixins/edit_modal_mixin


+edit_modal("/portfolio/"+permalink+"/editMetrics", "edit-operational-gross-burn", "Add Gross Burn")
  input(type="hidden" name="form_name" value="operational")

  div.small-label Gross Burn
  input(
    type="text"
    placeholder="Add gross burn"
    name="gross_burn"
    autocomplete="off")
  .inline-input-container
    div.small-label Quarter
    input(
      type="text"
      placeholder="1-4"
      name="quarter"
      autocomplete="off")
  .inline-input-container
    div.small-label Year
    input(
      type="text"
      name="year"
      autocomplete="off")



