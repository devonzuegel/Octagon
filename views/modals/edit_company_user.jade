include ../mixins/edit_modal_mixin


+edit_modal("/portfolio/"+permalink+"/editMetrics", "edit-user", "Edit User Metrics")
  input(type="hidden" name="form_name" value="user_metrics")

  div.small-label AVG DAU
  input(
    type="text"
    placeholder="Add AVG DAU"
    name="avg_dau"
    autocomplete="off"
    value= (user_metrics.avg_dau.length > 0) ? user_metrics.avg_dau[0].value : undefined)

  div.small-label AVG MAU
  input(
    type="text"
    placeholder="Add AVG MAU"
    name="avg_mau"
    autocomplete="off"
    value=(user_metrics.avg_mau.length > 0) ? user_metrics.avg_mau[0].value : undefined)

  div.small-label Churn
  input(
    type="text"
    placeholder="Add churn"
    name="churn"
    autocomplete="off"
    value=(user_metrics.churn.length > 0) ? user_metrics.churn[0].value : undefined)



