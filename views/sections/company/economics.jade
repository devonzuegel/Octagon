.tab-pane#economics
  .col-md-12.pane-header
    include quarter_info.jade

    .block-edit.edit-btn(data-toggle="modal" data-target="#edit-economics")
      if dataEntered(economics.ltv) || dataEntered(economics.lifetime_est) || dataEntered(economics.cac) || dataEntered(economics.asp) || dataEntered(economics.gm_percentage)
        i.fa.fa-pencil.fa-right
        | edit all
      else
        i.fa.fa-plus.fa-right
        | add all

  .col-md-3
    h3 LTV

    .block-edit.edit-btn(data-toggle="modal" data-target="#edit-economics-ltv")
      if dataEntered(economics.ltv)
        i.fa.fa-pencil
      else
        i.fa.fa-plus

    .block-info.block-num
      if dataEntered(economics.ltv)
        | #{economics.ltv[0].value}
      else
        | Add

  .col-md-9
    h3 LTV By Quarter

    //- Grab the data
    script(type="text/javascript").
      var ltv_data = !{JSON.stringify(economics.ltv)};
    .block-info.block-graph:.graph-padding#ltvGraph

