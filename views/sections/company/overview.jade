.tab-pane.active#overview
  //- ABOUT
  .col-md-6
    h3 About

    .block-edit.edit-btn(data-toggle="modal" data-target="#edit-about")
      i.fa.fa-pencil

    .block-info
      if (p && p.description)
        div 
          | #{shorten(p.description)}
          a(href="http://www.crunchbase.com/organization/#{permalink}") read more on Crunchbase
      else
        div Add description

  //- INFO
  .col-md-6
    h3 Info

    .block-edit.edit-btn(data-toggle="modal" data-target="#edit-info")
      i.fa.fa-pencil

    .block-info

      if (p && p.categories)
        h4 Categories
        div #{p.categories}
      else
        div Add categories

      if (p && p.founders)
        h4 Founders
        div #{p.founders}
      else
        div Add founders

      if (p && p.founded_on)
        h4 Founding Date
        div #{p.founded_on}
      else
        div Add date

      if (p && p.total_funding)
        h4 Total Funding
        div $#{p.total_funding}
      else
        div Add funding info

  //- MILESTONES
  .col-md-6
    h3 Milestones

    .block-edit.edit-btn(data-toggle="modal" data-target="#add-milestone")
      i.fa.fa-plus.fa-right
      | Add milestone

    .block-info

      //- script(type="text/x-handlebars", data-template-name="application").
        //- {{pie-chart data=content}}

      ul.milestone-list
        for m,i in c.milestones
          li.milestone
            .milestone-info
              .title #{m.title}
              .date #{m.date}
              .description #{m.description}
            a.milestone-edit(data-toggle="modal" data-target="#edit-milestone" id='edit-'+i)
              i.fa.fa-pencil



    script.

      // TODO: This needs to be factored out
      // ---
      // Grabs all_owners from routes & puts it into owners var
      window.onload = function() {
        var milestones = !{JSON.stringify(c.milestones)};

        // Iterate through milestones' edit btns so that onclick, the form is
        // populated with that owner's info
        for (var i = 0; i < milestones.length; i++) {
          (function(n) {
            var m = milestones[i];
            $('#edit-'+i).click(function() {
              $('#title').val(m.title);
              $('#date').val(m.date);
              $('#description').val(m.description);
              $('#id').val(m._id);
            });
          }(i))
        }
      };

