        | #{user_metrics.avg_mau[0].value}
      else
        | Add

  .col-md-9
    h3 AVG MAU By Quarter

    //- Grab the data
    script(type="text/javascript").
      var avg_mau_data = !{JSON.stringify(user_metrics.avg_mau)};
    .block-info.block-graph:.graph-padding#avgMauGraph

  .col-md-3
    h3 Churn

    .block-edit.edit-btn(data-toggle="modal" data-target="#edit-user-churn")
      i.fa.fa-pencil

    .block-info.block-num
      if user_metrics.churn.length > 0
        | #{user_metrics.churn[0].value}%
      else
        | Add

